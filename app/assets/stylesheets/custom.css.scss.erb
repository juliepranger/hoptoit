$darkpurple:rgba(93,65,87,1);
$grey:rgba(131,134,137,1);
$seafoam:rgba(168,202,186,1);
$green:rgba(202,215,178,1);
$yellow:rgba(235,227,170,1);


body{
	background-color: $yellow;
  background: url(<%= asset_path 'bgnoise_lg.png' %>);
  color: $darkpurple;
}

.navbar{
  background: $green;
  box-shadow: 0 5px $seafoam;
  opacity: 0.8;
  border:0;
  border-radius: 0;
}

.navbar-default .navbar-nav li a{
  color:$darkpurple;
}

a {
  color:$darkpurple;
}

.irsInfo {
  background: white;
  border: 2px solid $seafoam;
  border-radius: 20px;
} 
.container {
  background:rgba(255,255,255,0.7);
  border-radius: 20px;
  position: relative;
}

.logoDiv {
  overflow:hidden;
  
}

.listStyle{
  list-style-type:  none
}

.navbar-form {
  padding-top: 10px;
  padding-bottom: 10px;
  line-height: 20px;
  margin: 0;
}

.round-btn {
  background: $seafoam;
  border-radius: 100%;
  border: 2px dashed white;
  padding: 1em;
  text-align: center;
  width: 15vh;
  height: 15vh;
}

.round-btn span{
position: relative;
height: 15vh;
width: 15vh;
top: 20%;
text-decoration: none;
}

.round-btn:hover {
  background: darken($seafoam, 10%);
  text-decoration: none;
  color: white;
}

.upper-right {
  position: absolute;
  top: 15px;
  right: 15px;
}

